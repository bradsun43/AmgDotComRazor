@page
@model IndexModel
@{
    ViewData["Title"] = "AmeriGlide";
}


<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <title id="site_name">AmeriGlide | Leader in Home and Commercial Mobility products</title>
    <meta name="viewport" content="width=device-width">
</head>

<body>

    <div class="container p-2">
        <div class="d-md-flex flex-row w-100 justify-content-center py-2 border-bottom" id="landingInfo">
            <div class="col-md-4 text-uppercase text-center">
                <i class="fas fa-check-square mr-3 align-middle"></i>Curbside Pickup Available
            </div>
            <div class="col-md-4 text-uppercase text-center">
                <i class="fas fa-check-square mr-3 align-middle"></i>Price Match Guarantee
            </div>
            <div class="col-md-4 text-uppercase text-center">
                <i class="fas fa-check-square mr-3 align-middle"></i>Our Covid-19 Response
            </div>
        </div>
    </div>

    <div id="demo" class="carousel slide mb-3" data-ride="carousel">

        <!-- Indicators -->
        <ul class="carousel-indicators">
            <li data-target="#demo" data-slide-to="0" class="active"></li>
            <li data-target="#demo" data-slide-to="1"></li>
            <li data-target="#demo" data-slide-to="2"></li>
        </ul>

        <!-- The slideshow -->
        <div class="carousel-inner">
            <div class="carousel-item active">
                <a href="horizon_stairlift"><img src="/images/landing/sl3.jpg" alt="Los Angeles" class="img-fluid w-100" /></a>
            </div>
            <div class="carousel-item">
                <img src="/images/landing/lula.jpg" alt="Chicago" class="img-fluid w-100" />
            </div>
            <div class="carousel-item">
                <img src="/images/landing/vpl.jpg" alt="New York" class="img-fluid w-100" />
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="carousel-control-prev" href="#demo" data-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </a>
        <a class="carousel-control-next" href="#demo" data-slide="next">
            <span class="carousel-control-next-icon"></span>
        </a>
    </div>

    <div class="container-fluid p-0 my-4">
        <div class="row">
            <div class="col-lg w-100" id="gridLanding">
                <a href="/horizon_stairlift" class="btn btn-outline-primary py-3 mb-3 text-uppercase w-100">Stair Lifts</a>
            </div>
            <div class="col-lg w-100" id="gridLanding">
                <a href="#" class="btn btn-outline-primary py-3 mb-3 text-uppercase w-100">Platform Lifts</a>
            </div>
            <div class="col-lg w-100" id="gridLanding">
                <a href="#" class="btn btn-outline-primary py-3 mb-3 text-uppercase w-100">Elevators</a>
            </div>
            <div class="col-lg w-100" id="gridLanding">
                <a href="#" class="btn btn-outline-primary py-3 mb-3 text-uppercase w-100">Dumbwaiters</a>
            </div>
        </div>
    </div>

    <div>
        <div>
            <label>
                $250 OFF
            </label>
        </div>
    </div>


    <div class="container p-0">
        <a href="/covid" class="col-12 p-0 m-0">
            <img src="/images/landing/covid.jpg" class="d-none d-lg-block w-100 img-fluid" />
            <img src="/images/landing/covid-m.jpg" class="d-lg-none w-100 img-fluid" />
        </a>
    </div>

    <div class="container-fluid p-0 my-4">
        <h1>
            Popular Categories
        </h1>
        <div class="row">
            <div class="col-lg mb-4">
                <a href="#">
                    <img src="/images/landing/vpl-grey.png" class="img-fluid mx-auto" />
                </a>
            </div>
            <div class="col-lg mb-4">
                <a href="/horizon_stairlift">
                    <img src="/images/landing/sl-grey.png" class="img-fluid" />
                </a>
            </div>
            <div class="col-lg mb-4">
                <a href="#">
                    <img src="/images/landing/ipl-grey.png" class="img-fluid" />
                </a>
            </div>
            <div class="col-lg mb-4">
                <a href="#">
                    <img src="/images/landing/enclosed-grey.png" class="img-fluid" />
                </a>
            </div>
        </div>
    </div>

</body>

</html>

